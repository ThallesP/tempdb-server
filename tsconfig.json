{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@modules/*": ["./modules/*"],
      "@providers/*": ["./providers/*"],
      "@utils/*": ["./utils/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
